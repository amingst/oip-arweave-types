{
	"name": "oip-arweave-types",
	"version": "0.2.0",
	"description": "TypeScript types for OIP Arweave templates with optional CLI generator",
	"main": "./types/index.d.ts",
	"types": "./types/index.d.ts",
	"bin": {
		"oip-arweave-types": "./dist/index.js"
	},
	"scripts": {
		"build": "tsc",
		"prepublishOnly": "pnpm run build",
		"postinstall": "node dist/postinstall.js",
		"changeset": "changeset",
		"changeset:version": "changeset version",
		"changeset:publish": "changeset publish",
		"release": "pnpm run build && changeset publish",
		"prepare-publish": "pnpm run build && pnpm install"
	},
	"keywords": [
		"typescript",
		"types",
		"arweave",
		"oip",
		"type-definitions",
		"cli"
	],
	"author": "Andrew Mingst",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/amingst/oip-arweave-types.git"
	},
	"homepage": "https://github.com/amingst/oip-arweave-types#readme",
	"bugs": {
		"url": "https://github.com/amingst/oip-arweave-types/issues"
	},
	"files": [
		"dist/**/*",
		"types/**/*",
		"README.md",
		"CHANGELOG.md"
	],
	"devDependencies": {
		"@changesets/cli": "^2.29.5",
		"@types/node": "^20.0.0",
		"typescript": "^5.0.0"
	},
	"dependencies": {
		"chalk": "4",
		"commander": "^14.0.0"
	}
}
